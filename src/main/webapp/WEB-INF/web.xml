<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <welcome-file-list>
        <welcome-file>auth.jsp</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>Jersey</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>api.v1</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AuthServlet</servlet-name>
        <servlet-class>api.servlets.AuthServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ClubServlet</servlet-name>
        <servlet-class>api.servlets.ServletClubPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClubServlet</servlet-name>
        <url-pattern>/page</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>ServletEvent</servlet-name>
        <servlet-class>api.servlets.ServletEvent</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletEvent</servlet-name>
        <url-pattern>/event</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddToInboxEventServlet</servlet-name>
        <servlet-class>api.servlets.AddToInboxEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddToInboxEventServlet</servlet-name>
        <url-pattern>/AddToInboxEventServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>api.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddInboxClubServlet</servlet-name>
        <servlet-class>api.servlets.AddToInboxClubServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddInboxClubServlet</servlet-name>
        <url-pattern>/AddToInboxClubServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>AddStudentServlet</servlet-name>
        <servlet-class>api.servlets.AddStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStudentServlet</servlet-name>
        <url-pattern>/AddStudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddEventServlet</servlet-name>
        <servlet-class>api.servlets.AddEventServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddEventServlet</servlet-name>
        <url-pattern>/AddEventServlet</url-pattern>
    </servlet-mapping>



    <resource-ref>
        <description>JDBC connection</description>
        <res-ref-name>jdbc/FinalProject</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>